<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/local_preview_layout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <RelativeLayout
            android:id="@+id/local_preview_layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <io.agora.rtcwithst.views.sensetime.EffectOptionsLayout
        android:id="@+id/effect_option_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <FrameLayout
        android:id="@+id/remote_view_layout"
        android:layout_width="@dimen/remote_view_width"
        android:layout_height="@dimen/remote_view_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/global_view_margin"
        android:visibility="gone">
    </FrameLayout>
    <ImageView
        android:id="@+id/change_camera_btn"
        android:layout_width="@dimen/switch_camera_btn_size"
        android:layout_height="@dimen/switch_camera_btn_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/global_view_margin"
        android:src="@drawable/change_camera"
        android:background="@drawable/change_camera_btn_bg"
        android:onClick="onCameraChange"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/global_view_margin"
        android:layout_toEndOf="@id/change_camera_btn"
        android:text="@string/switch_view_title"
        android:onClick="onSwitchView"/>
</RelativeLayout>
